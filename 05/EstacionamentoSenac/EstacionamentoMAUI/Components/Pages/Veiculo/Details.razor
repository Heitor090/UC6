@page "/veiculos/details/{int:id}"
@using EstacionamentoMAUI.Models
@inject HttpClient Http;

<h3>Detalhes do Veiculo</h3>

@if (veiculos == null)
{
    <p><ea>Carregando...</ea></p>
}
else
{

    <div>
        <h4>Veiculo</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                Modelo
            </dt>
            <dd class="col-sm-10">
                @veiculos.Modelo
            </dd>
            <dt class="col-sm-2">
                Cor
            </dt>
            <dd class="col-sm-10">
                @veiculos.Cor
            </dd>
            <dt class="col-sm-2">
                Placa
            </dt>
            <dd class="col-sm-10">
                @veiculos.Placa
            </dd>
            <dt class="col-sm-2">
                Motorista Id
            </dt>
            <dd class="col-sm-10">
                @veiculos.MotoristaId
            </dd>
        </dl>
    </div>

    <div>
        <a href="/veiculos" class="btn btn-light">Voltar</a>
    </div>
}
@code {
    [Parameter]

    public int Id { get; set; }
        
    private Veiculo? veiculos;

    async Task ListVeiculo()
    {
        veiculos = await Http.GetFromJsonAsync<Veiculo>($"https://localhost:4000/api/Veiculos/{Id}");
    }

}