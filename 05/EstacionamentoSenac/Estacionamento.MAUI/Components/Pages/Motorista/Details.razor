@page "/motoristas/details/{id}"
@using Estacionamento.MAUI.Models
@inject HttpClient Http


<h3>Detalhes do Motorista</h3>

@if (motorista == null)
{
    <p><em>Carregando..</em></p>
}
else
{
    <div>
        <h4>Motorista</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                Nome
            </dt>
            <dd class="col-sm-10">
                @motorista.Nome
            </dd>
            <dt class="col-sm-2">
                CPF:
            </dt>
            <dd class="col-sm-10">
                @motorista.Cpf
            </dd>
            <dt class="col-sm-2">
                Telefone:
            </dt>
            <dd class="col-sm-10">
                @motorista.Telefone
            </dd>
            <dt class="col-sm-2">
                CPF:
            </dt>
            <dd class="col-sm-10">
                @motorista.Cpf
            </dd>
            <dt class="col-sm-2">
                Placa:
            </dt>
           
            @foreach(var veiculo in motorista.Veiculos)
            {
                <dd class="col-sm-10">
                    @veiculo.Placa
                </dd>
            }
            
        </dl>

    </div>

    <div>
        <a href="/motoristas" class="btn btn-light">Voltar</a>
    </div>
}


@code {
    [Parameter]
    public string Id { get; set; }

    private Motorista? motorista;
    private Veiculo? veiculo;
    protected override async Task OnInitializedAsync()
    {
        motorista = await Http.GetFromJsonAsync<Motorista>($"https://localhost:4000/api/Motoristas/{Id}");
        veiculo = await Http.GetFromJsonAsync<Veiculo>($"https://localhost:4000/api/Veiculo/{Id}");
    }
    async Task ListVeiculos()
    {
        veiculo = await Http.GetFromJsonAsync<Veiculo>($"https://localhost:4000/api/Veiculo/{Id}");
    }

}
