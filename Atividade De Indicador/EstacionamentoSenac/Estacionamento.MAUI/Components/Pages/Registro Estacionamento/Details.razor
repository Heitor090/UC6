@page "/registros/details/{int:id}"
@using Estacionamento.MAUI.Models
@inject HttpClient Http

<h3>Detalhes do Registro de Estacionamento</h3>

@if (registroEstacionamento == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div>
        <h4>Registro de Estacionamento:</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                Id do Veículo
            </dt>
            <dd class="col-sm-10">
                @registroEstacionamento.VeiculoId
            </dd>
            <dt class="col-sm-2">
                Id da Vaga
            </dt>
            <dd class="col-sm-10">
                @registroEstacionamento.VagaId
            </dd>
            <dt class="col-sm-2">
                Data e Hora da Entrada
            </dt>
            <dd class="col-sm-10">
                @registroEstacionamento.DataHoraEntrada
            </dd>
            <dt class="col-sm-2">
                Data e Hora Saída
            </dt>
            <dd class="col-sm-10">
                @registroEstacionamento.DataHoraSaida
            </dd>
            <dt class="col-sm-2">
               Valor Final
            </dt>
            <dd class="col-sm-10">
                @registroEstacionamento.ValorFinal
            </dd>
        </dl>
    </div>    

    <div>
        <a href="/registros" class="btn btn-light">Voltar</a>
    </div>
}


@code {
    [Parameter]
    public int Id{ get; set; }
    private RegistroEstacionamento? registroEstacionamento;
    protected override async Task OnInitializedAsync()
    {
        registroEstacionamento = await Http.GetFromJsonAsync<RegistroEstacionamento>($"https://localhost:4000/api/RegistrosEstacionamento/{Id}");
    }

}
