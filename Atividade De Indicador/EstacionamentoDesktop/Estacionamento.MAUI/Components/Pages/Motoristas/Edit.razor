@page "/motoristas/edit/{id:int}"
@inject HttpClient Http
@inject NavigationManager NavigationManager
@using Estacionamento.MAUI.Models

<h3 class="text-center mb-3">Editar Motorista</h3>

@if (motorista == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form @onsubmit = "UpdateVaga" >
        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
                    <input id="nome" class="form-control" @bind= "@motorista.Nome" />
        </div>
        <div class="mb-3">
            <label for="cpf" class="form-label">CPF</label>
                    <input id="cpf" class="form-control" @bind="@motorista.Cpf" />
        </div>
        <div class="mb-3">
            <label for="telefone" class="form-label">Telefone</label>
                    <input id="telefone" class="form-control" @bind="@motorista.Telefone" />
        </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    <a href="/motoristas" class="btn btn-light">Voltar</a>
                </div>
            </form>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Motorista? motorista;

    protected override async Task OnInitializedAsync()
    {
        motorista = await Http.GetFromJsonAsync<Motorista>($"https://localhost:4000/api/Motoristas/{Id}");
    }

    async Task UpdateVaga()
    {
        await Http.PutAsJsonAsync($"https://localhost:4000/api/Motoristas/{Id}", motorista);
        NavigationManager.NavigateTo("/motoristas");
    }
}