@page "/motoristas/create"
@using Estacionamento.MAUI.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager


<h3 class="text-center mb-3">Novo Motorista</h3>

<hr />

<div class="row">
    <div class="col-md-4">

        <form @onsubmit="CreateMotorista">
            <div class="form-group">
                <label for="nome" class="control-label">Nome</label>
                <input for="nome" class="form-control" @bind="motorista.Nome" />
            </div>
            <div class="form-group">
                <label for="Cpf" class="control-label">CPF</label>
                <input for="Cpf" class="form-control" @bind="motorista.Cpf" />
            </div>
            <div class="form-group">
                <label for="Telefone" class="control-label">Telefone</label>
                <input for="Telefone" class="form-control" @bind="motorista.Telefone" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href="/motoristas" class="btn btn-light">Voltar</a>
            </div>
        </form>

    </div>
</div>

@code {
    Motorista motorista = new Motorista();

    async Task CreateMotorista()
    {
        await Http.PostAsJsonAsync("https://localhost:4000/api/Motoristas", motorista);
        NavigationManager.NavigateTo("/motoristas");
    }



}

