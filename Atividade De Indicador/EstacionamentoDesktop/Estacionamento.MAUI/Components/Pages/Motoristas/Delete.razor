@page "/motoristas/delete/{id:int}"
@inject HttpClient Http
@inject NavigationManager NavigationManager
@using Estacionamento.MAUI.Models

<h3 class="text-center mb-3">Excluir Motorista</h3>

@if (motorista == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <h4>VocÃª tem certeza que deseja excluir este motorista?</h4>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nome
            </dt>
            <dd class="col-sm-10">
                @motorista.Nome
            </dd>
             <dt class="col-sm-2">
                CPF
            </dt>
            <dd class="col-sm-10">
                @motorista.Cpf
            </dd>
             <dt class="col-sm-2">
                Telefone
            </dt>
            <dd class="col-sm-10">
                @motorista.Telefone
            </dd>
        </dl>

        <form @onsubmit = "DeleteMotorista" >
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a href="/motoristas" class="btn btn-light">Voltar</a>
        </form>
    </div>
}

@code {
     [Parameter]
    public int Id{ get; set; }

    private Motorista? motorista;
    protected override async Task OnInitializedAsync()
    {
        motorista = await Http.GetFromJsonAsync<Motorista>($"https://localhost:4000/api/Motoristas/{Id}");
    }
    async Task DeleteMotorista()
    {
        await Http.DeleteAsync($"https://localhost:4000/api/Motoristas/{Id}");
        NavigationManager.NavigateTo("/motoristas");
    }
}
